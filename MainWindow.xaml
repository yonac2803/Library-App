<Window x:Class="LibraryProject_Yonatan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryProject_Yonatan"
        mc:Ignorable="d"
      Title="MainWindow" Height="1000" Width="1500">
    <Grid Background="#4d7278">
        <StackPanel Orientation="Vertical" Margin="500,176,500,91">
            <TextBlock FontStyle="Oblique" FontWeight="ExtraBold" Foreground="Black" Background="#dbd6b2" FontSize="40"  TextWrapping="Wrap" Height="250" Width="500"><Run Text="   "/><LineBreak/><Run Text="   Welcome To"/><LineBreak/><Run Text="                    The Library"/></TextBlock>
            <Button FontSize="30" FontWeight="DemiBold" Content="Public Access" x:Name="EnterLibrary" Click="Public_Click" Height="75" Width="500"/>
            <Button FontSize="30" FontWeight="DemiBold" Content="Librarian Access" Click="Password_Click" Height="75" Width="500"/>
            <Button x:Name="fullscreenButton" Click="FullscreenButton_Click" Height="75" Width="500">
                <TextBlock FontSize="30" FontWeight="DemiBold" Text="Toggle Fullscreen"/>
            </Button>

        </StackPanel>
    </Grid>
</Window>
